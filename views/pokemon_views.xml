<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pokedex_pokemon_action" model="ir.actions.act_window">
        <field name="name">Pokemon</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pokedex.pokemon</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiting_face">Define the pokemon</p>
        </field>
    </record>

    <menuitem id="pokedex_menu" name="pokedex" web_icon="pokedex,static/description/icon.png" sequence="1" />

    <menuitem id="pokedex_pokemon_menu" action="pokedex_pokemon_action" parent="pokedex_menu" sequence="1" />


    <record id="pokedex_pokemon_view_tree" model="ir.ui.view">
        <field name="name">Tree view for pokemon</field>
        <field name="model">pokedex.pokemon</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>


    <record id="pokedex_pokemon_view_kanban" model="ir.ui.view">
        <field name="name">Kanban view for pokemon</field>
        <field name="model">pokedex.pokemon</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id" />
                <field name="name" />
                <field name="image_128" />
                <field name="color" />
                <field name="type_ids" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_image">
                            <img alt="" class="o_image_64_contain" t-if="record.image_128.raw_value" t-att-src="kanban_image('pokedex.pokemon','image_128', record_id )" />
                        </div>
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title">
                                <field name="name" />
                            </strong>
                            <div class="o_kanban_tags_section oe_kanban_pokemon_types">
                                <span class="oe_kanban_list_many2many">
                                    <field name="type_ids" widget="many2many_tags" options="{'color_field':'color'}" />
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="pokedex_pokemon_view_form" model="ir.ui.view">
        <field name="name">Form view for pokemon</field>
        <field name="model">pokedex.pokemon</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image':'image_128'}" />

                    <div class="oe_title">
                        <h1>
                            <span>
                                NumberÂ°
                                <field name="sequence" />
                                -
                                <field name="name" defult_focus="1" placeholder="Name" />
                            </span>
                        </h1>
                    </div>

                    <div class="oe_left">
                        <group>
                            <field name="preevolution_id" />
                            <field name="height" />
                            <field name="weight" />
                        </group>
                    </div>

                    <div class="oe_right">
                        <group>
                            <field name="type_ids" widget="many2many_tags" options="{'color_field':'color', 'no_create_edit':True}" placeholder="Types..." />
                        </group>
                    </div>
                    
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Notes of pokemon." />
                    </group>
                    <group string="Evolutions">
                        <field name="evolution_ids" nolabel="1" mode="kanban" context="{'default_preevolution_id':active_id}">
                            <kanban>
                                <field name="id" />
                                <field name="name" />
                                <field name="image_128" />
                                <field name="color" />
                                <field name="type_ids" />
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_global_click">
                                            <div class="o_kanban_image">
                                                <img alt="" class="o_image_64_contain" t-if="record.image_128.raw_value" t-att-src="kanban_image('pokedex.pokemon','image')" />
                                            </div>
                                            <div class="oe_kanban_details">
                                                <strong class="o_kanban_record_title">
                                                    <field name="name" />
                                                </strong>
                                                <div class="o_kanban_tags_section oe_kanban_pokemon_types">
                                                    <span>
                                                        <field name="type_ids" widget="many2many_tags" options="{'color_field':'color'}" />
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>